asm("
softint_handler:
    push %r24
    setq 0, %r24

    // args
    push %r2
    push %r1

    push %r28
    call f_softint_handler
    pop %r28

    add %sp, 2, %sp
    pop %r24
    reti
")

export int softint_handler(int r1, int r2) {
    if(r1 == 0) {
        _panic(r2);
    }
    else if(r1 == 1) {
        _start_process((void*)r2);
    }
    else if(r1 == 2) {
        _kill_process(r2);
    }
}
